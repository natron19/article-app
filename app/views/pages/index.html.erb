
<div class="row">
 <div class="col-sm-8">
  <div class="jumbotron">
    <h1 class="text-center">Welcome to Awesome Articles.</h1>
    <p class="text-center">Awesome applications built with Rails!</p>
    <p></p>
  </div>
</div>

  <!-- Blog Sidebar Widgets Column -->
  <div class="col-sm-4">
      <!-- Blog Categories Well -->
      <!-- Side Widget Well -->
      <div class="well">
        <h4>Recent Posts</h4>
          <% @articles.each do |a| %>
            Created by: <%= a.user.username %><br />
            <strong><%= link_to truncate(a.title, length: 25), a %></strong>
            <p><%= truncate(a.body) %></p>
          <% end %>
      </div>
  </div>

</div>
<!-- /.row -->

<hr>
