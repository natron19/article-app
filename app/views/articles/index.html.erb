<div class="row">
    <!-- Blog article Content Column -->
    <div class="col-sm-8">
    <% @articles.each do |article| %>
            <!-- Blog article -->

            <!-- Title -->
            <h4 style="font-size: 25.5px;">
              <%= link_to article.title, article %>
            </h4>
                            <!-- Date/Time -->
            <p><span class="glyphicon glyphicon-time"></span>Posted about <%= time_ago_in_words(article.created_at)%> ago
            </p>


            <!-- Author -->
            <p>
                 Article By:<strong>  <%=  article.user.username %></strong>
                 <% if article.user.image %>
                  <%= image_tag article.user.image.url(:thumb), class: "img-circle" %>
                 <% end %>
            </p>

            <hr>

            <!-- articleed Comments -->

            <!-- Comment -->

    <% end %>

  <%= link_to "New article", new_article_path, class: "btn btn-primary" %>


  </div>

<!-- Blog Sidebar Widgets Column -->
<div class="col-sm-4">
    <div class="well">
        <h4>Recent articles</h4>
        <% @last5.each do |a| %>
          Created by: <%= a.user.username %><br />
          <strong><%= link_to truncate(a.title, length: 25), a %></strong>
          <p><%= truncate(a.body) %></p>
        <% end %>
    </div>
</div>

</div>

<%= will_paginate @articles %>
<br>
